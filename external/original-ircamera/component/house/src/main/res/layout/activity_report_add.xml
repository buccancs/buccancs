<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16131e">

    <!-- 标题栏 -->
    <View
        android:id="@+id/view_title_bar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        tools:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_white_svg"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_title_bar"
        app:layout_constraintBottom_toBottomOf="@id/view_title_bar" />
    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:paddingVertical="12dp"
        android:paddingStart="8dp"
        android:paddingEnd="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/selector_house_edit"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_title_bar"
        app:layout_constraintBottom_toBottomOf="@id/view_title_bar" />
    <ImageView
        android:id="@+id/iv_expand"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:paddingVertical="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/selector_house_fold"
        android:contentDescription="@null"
        app:layout_constraintEnd_toStartOf="@id/iv_edit"
        app:layout_constraintTop_toTopOf="@id/view_title_bar"
        app:layout_constraintBottom_toBottomOf="@id/view_title_bar" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_detection"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintEnd_toStartOf="@id/iv_expand"
        app:layout_constraintTop_toTopOf="@id/view_title_bar"
        app:layout_constraintBottom_toBottomOf="@id/view_title_bar" />

    <!-- 导出报告 -->
    <TextView
        android:id="@+id/tv_export_report"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="34dp"
        android:gravity="center"
        android:text="@string/monitor_report_export"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_corners10_solid_theme"
        android:visibility="gone"
        tools:visibility="gone"
        app:layout_constraintDimensionRatio="343:50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.topdon.house.view.HouseDetectView
        android:id="@+id/view_house_detect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:visibility="gone"
        tools:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_title_bar"
        app:layout_constraintBottom_toTopOf="@id/tv_export_report" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_empty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_title_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <!-- 数据为空时提示图片 -->
        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_list_empty"
            android:contentDescription="@null"
            app:layout_constraintVertical_bias="0.28"
            app:layout_constraintWidth_percent="0.38"
            app:layout_constraintDimensionRatio="436:318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/no_detect"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_empty" />
        <TextView
            android:id="@+id/tv_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/add"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_corners10_solid_theme"
            app:layout_constraintWidth_percent="0.42"
            app:layout_constraintDimensionRatio="161:50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_empty" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>