<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_top_mask"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:background="#16131e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_bg_dir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_corners10_solid_23202e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view_bottom_space" />

    <TextView
        android:id="@+id/view_space_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/view_bg_dir"
        app:layout_constraintStart_toStartOf="@id/view_bg_dir" />

    <!-- 三角形 -->
    <ImageView
        android:id="@+id/iv_triangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/svg_house_triangle_down"
        android:contentDescription="@null"
        app:layout_constraintWidth_percent="0.06"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/view_space_title"
        app:layout_constraintBottom_toBottomOf="@id/view_space_title"
        app:layout_constraintStart_toStartOf="@id/view_space_title" />

    <!-- 编辑 -->
    <ImageView
        android:id="@+id/iv_dir_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/svg_house_edit"
        android:contentDescription="@null"
        app:layout_constraintWidth_percent="0.07"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/view_bg_dir"
        app:layout_constraintEnd_toEndOf="@id/view_bg_dir" />

    <!-- 复制 -->
    <ImageView
        android:id="@+id/iv_dir_copy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/svg_house_copy"
        android:contentDescription="@null"
        app:layout_constraintWidth_percent="0.07"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/iv_dir_edit"
        app:layout_constraintEnd_toStartOf="@id/iv_dir_edit" />

    <!-- 编辑 及 复制实际触控区域 -->
    <View
        android:id="@+id/view_icon_bottom"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="@id/iv_dir_edit"
        app:layout_constraintEnd_toEndOf="@id/iv_dir_edit"
        app:layout_constraintTop_toBottomOf="@id/iv_dir_edit" />
    <View
        android:id="@+id/view_icon_center"
        android:layout_width="1px"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/iv_dir_copy"
        app:layout_constraintEnd_toEndOf="@id/iv_dir_edit"
        app:layout_constraintTop_toTopOf="@id/iv_dir_edit"
        app:layout_constraintBottom_toBottomOf="@id/iv_dir_edit"/>
    <View
        android:id="@+id/view_dir_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/view_icon_center"
        app:layout_constraintEnd_toEndOf="@id/view_bg_dir"
        app:layout_constraintTop_toTopOf="@id/view_bg_dir"
        app:layout_constraintBottom_toBottomOf="@id/view_icon_bottom" />
    <View
        android:id="@+id/view_dir_copy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/tv_dir_name"
        app:layout_constraintEnd_toEndOf="@id/view_icon_center"
        app:layout_constraintTop_toTopOf="@id/view_bg_dir"
        app:layout_constraintBottom_toBottomOf="@id/view_icon_bottom" />



    <TextView
        android:id="@+id/tv_dir_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        tools:text="一楼"
        app:layout_constraintTop_toTopOf="@id/view_space_title"
        app:layout_constraintStart_toEndOf="@id/iv_triangle"
        app:layout_constraintEnd_toStartOf="@id/iv_dir_copy" />

    <!-- 绿色数量 -->
    <TextView
        android:id="@+id/tv_good_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginStart="19dp"
        android:paddingHorizontal="2dp"
        android:minWidth="20sp"
        android:minHeight="20sp"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_corners50_solid_0ac26a"
        tools:text="99"
        app:layout_constraintStart_toStartOf="@id/view_bg_dir"
        app:layout_constraintTop_toBottomOf="@id/tv_dir_name" />
    <!-- 黄色数量 -->
    <TextView
        android:id="@+id/tv_warn_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:paddingHorizontal="2dp"
        android:minWidth="20sp"
        android:minHeight="20sp"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_corners50_solid_ff9900"
        tools:text="99"
        app:layout_constraintTop_toTopOf="@id/tv_good_count"
        app:layout_constraintStart_toEndOf="@id/tv_good_count" />
    <!-- 红色数量 -->
    <TextView
        android:id="@+id/tv_danger_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:paddingHorizontal="2dp"
        android:minWidth="20sp"
        android:minHeight="20sp"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_corners50_solid_d31b1b"
        tools:text="99"
        app:layout_constraintTop_toTopOf="@id/tv_good_count"
        app:layout_constraintStart_toEndOf="@id/tv_warn_count" />

    <View
        android:id="@+id/view_bottom_space"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintStart_toStartOf="@id/view_bg_dir"
        app:layout_constraintTop_toBottomOf="@id/tv_good_count" />
</androidx.constraintlayout.widget.ConstraintLayout>