<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16131e">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        tools:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/iv_exit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/svg_house_close"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_title_bar"
        app:layout_constraintBottom_toBottomOf="@id/view_title_bar" />
    <ImageView
        android:id="@+id/iv_save"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/svg_house_save"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_title_bar"
        app:layout_constraintBottom_toBottomOf="@id/view_title_bar" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="天花板"
        app:layout_constraintStart_toEndOf="@id/iv_exit"
        app:layout_constraintEnd_toStartOf="@id/iv_save"
        app:layout_constraintTop_toTopOf="@id/view_title_bar"
        app:layout_constraintBottom_toBottomOf="@id/view_title_bar" />

    <View
        android:id="@+id/view_input_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_corners10_solid_23202e"
        app:layout_constraintDimensionRatio="343:202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_title_bar" />

    <TextView
        android:id="@+id/tv_input_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="0/200"
        android:textSize="12sp"
        android:textColor="#80ffffff"
        app:layout_constraintEnd_toEndOf="@id/view_input_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_input_bg" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:gravity="start|top"
        android:hint="@string/please_enter"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textColorHint="#80ffffff"
        android:inputType="textMultiLine"
        android:background="@null"
        android:maxLength="200"
        app:layout_constraintStart_toStartOf="@id/view_input_bg"
        app:layout_constraintEnd_toEndOf="@id/view_input_bg"
        app:layout_constraintTop_toTopOf="@id/view_input_bg"
        app:layout_constraintBottom_toTopOf="@id/tv_input_count" />

    <TextView
        android:id="@+id/tv_common_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="32dp"
        android:text="@string/common_phrases"
        android:textSize="15sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_input_bg" />

    <!-- 才4个常用语，就不搞列表之类的东西了，直接4个 TextView -->
    <TextView
        android:id="@+id/tv_quick_input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:text="@string/quick_input1"
        android:textSize="14sp"
        android:textColor="#b2ffffff"
        android:background="@drawable/bg_corners10_solid_10_ff"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_common_title"
        app:layout_constraintEnd_toEndOf="@id/tv_common_title"
        app:layout_constraintTop_toBottomOf="@id/tv_common_title" />
    <TextView
        android:id="@+id/tv_quick_input2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:text="@string/quick_input2"
        android:textSize="14sp"
        android:textColor="#b2ffffff"
        android:background="@drawable/bg_corners10_solid_10_ff"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_common_title"
        app:layout_constraintEnd_toEndOf="@id/tv_common_title"
        app:layout_constraintTop_toBottomOf="@id/tv_quick_input1" />
    <TextView
        android:id="@+id/tv_quick_input3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:text="@string/quick_input3"
        android:textSize="14sp"
        android:textColor="#b2ffffff"
        android:background="@drawable/bg_corners10_solid_10_ff"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_common_title"
        app:layout_constraintEnd_toEndOf="@id/tv_common_title"
        app:layout_constraintTop_toBottomOf="@id/tv_quick_input2" />
    <TextView
        android:id="@+id/tv_quick_input4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:text="@string/quick_input4"
        android:textSize="14sp"
        android:textColor="#b2ffffff"
        android:background="@drawable/bg_corners10_solid_10_ff"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_common_title"
        app:layout_constraintEnd_toEndOf="@id/tv_common_title"
        app:layout_constraintTop_toBottomOf="@id/tv_quick_input3" />

</androidx.constraintlayout.widget.ConstraintLayout>


