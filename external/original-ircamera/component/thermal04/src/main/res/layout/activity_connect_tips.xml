<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#16131e">

    <com.topdon.lib.core.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingBottom="45dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:text="@string/ts004_guide_text1"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- 提示1 -->
            <TextView
                android:id="@+id/tv_tips1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="#ccffffff"
                tools:text="1.长按模式切换键3秒"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />
            <ImageView
                android:id="@+id/iv_tips1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@null"
                tools:src="@drawable/ic_connect_tips_ts004_1"
                app:layout_constraintDimensionRatio="335:130"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tips1" />

            <!-- 提示2 -->
            <TextView
                android:id="@+id/tv_tips2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textColor="#ccffffff"
                tools:text="2.在内屏打开WiFi开关"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_tips1" />
            <ImageView
                android:id="@+id/iv_tips2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@null"
                tools:src="@drawable/ic_connect_tips_ts004_2"
                app:layout_constraintDimensionRatio="335:130"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tips2" />

            <!-- 仅TC007，提示3 -->
            <TextView
                android:id="@+id/tv_tips3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/tc007_connect_tips3"
                android:textSize="14sp"
                android:textColor="#ccffffff"
                android:visibility="gone"
                tools:visibility="gone"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_tips2" />
            <ImageView
                android:id="@+id/iv_tips3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_connect_tips_tc007_3"
                android:contentDescription="@null"
                android:visibility="gone"
                tools:visibility="gone"
                app:layout_constraintDimensionRatio="335:130"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tips3" />

            <!-- 仅TC007，提示4 -->
            <TextView
                android:id="@+id/tv_tips4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/tc007_connect_tips4"
                android:textSize="14sp"
                android:textColor="#ccffffff"
                android:visibility="gone"
                tools:visibility="gone"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_tips3" />
            <ImageView
                android:id="@+id/iv_tips4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_connect_tips_tc007_4"
                android:contentDescription="@null"
                android:visibility="gone"
                tools:visibility="gone"
                app:layout_constraintDimensionRatio="335:130"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tips4" />

            <!-- 仅 TS004 时，更多帮助入口 -->
            <TextView
                android:id="@+id/tv_more_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="14sp"
                android:textColor="#ccffffff"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="若仍然无法连接，请查看“更多帮助”"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_tips4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>