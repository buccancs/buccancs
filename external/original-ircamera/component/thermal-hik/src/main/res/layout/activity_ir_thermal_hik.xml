<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#16131e"
        tools:context=".activity.IRThermalHikActivity">

        <!-- 标题栏 -->
        <com.topdon.lib.core.view.MainTitleView
            android:id="@+id/title_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:isInitLeft="false"
            app:leftDrawable="@drawable/ic_back_white_night_svg"
            app:rightDrawable="@drawable/ic_info_svg"
            app:right2Drawable="@drawable/svg_tisr_off"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 菜单 -->
        <com.topdon.menu.MenuFirstTabView
            android:id="@+id/menu_first_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <com.topdon.menu.MenuSecondView
            android:id="@+id/menu_second_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:deviceType="single_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/menu_first_view" />

        <FrameLayout
            android:id="@+id/thermal_lay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="192:256"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_view"
            app:layout_constraintBottom_toTopOf="@id/menu_second_view">
            <!-- 热成像画面图层 -->
            <com.topdon.module.thermal.ir.view.HikSurfaceView
                android:id="@+id/hik_surface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <!-- 画中画本机相机图层 -->
            <com.topdon.lib.ui.camera.CameraPreView
                android:id="@+id/camera_pre_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
            <!-- 温度图层 -->
            <com.topdon.module.thermal.ir.view.TemperatureHikView
                android:id="@+id/temperature_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <!-- 温度报警红蓝闪烁图层 -->
            <com.topdon.libcom.view.TempLayout
                android:id="@+id/temp_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- 趋势图 -->
        <com.topdon.module.thermal.ir.view.TrendView
            android:id="@+id/trend_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="gone"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/menu_second_view" />

        <!-- 伪彩条 -->
        <com.topdon.lib.ui.widget.BitmapConstraintLayout
            android:id="@+id/cl_pseudo_bar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/thermal_lay"
            app:layout_constraintBottom_toBottomOf="@id/thermal_lay"
            app:layout_constraintEnd_toEndOf="@id/thermal_lay">

            <ImageView
                android:id="@+id/iv_pseudo_bar_lock"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="6dp"
                android:padding="8dp"
                android:src="@drawable/selector_pseudo_bar_lock"
                android:contentDescription="@null"
                app:layout_constraintBottom_toTopOf="@id/pseudo_seek_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 自定义渲染时的温度范围文字 -->
            <TextView
                android:id="@+id/tv_temp_content"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_pseudo_bar_input"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="22dp"
                android:padding="8dp"
                android:src="@drawable/ic_color_edit"
                android:contentDescription="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pseudo_seek_bar"
                app:layout_constraintBottom_toBottomOf="parent" />

            <com.topdon.lib.ui.widget.seekbar.VerticalRangeSeekBar
                android:id="@+id/pseudo_seek_bar"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_marginTop="-12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="-12dp"
                app:layout_constraintBottom_toTopOf="@id/iv_pseudo_bar_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_pseudo_bar_lock"
                app:rsb_gravity="bottom"
                app:rsb_indicator_background_color="#00000000"
                app:rsb_indicator_height="wrap_content"
                app:rsb_indicator_padding_bottom="6dp"
                app:rsb_indicator_padding_left="6dp"
                app:rsb_indicator_padding_right="6dp"
                app:rsb_indicator_padding_top="6dp"
                app:rsb_indicator_radius="3dp"
                app:rsb_indicator_show_mode="alwaysShow"
                app:rsb_indicator_width="wrap_content"
                app:rsb_max="0"
                app:rsb_min="0"
                app:rsb_min_interval="0.1"
                app:rsb_mode="range"
                app:rsb_orientation="left"
                app:rsb_progress_drawable="@drawable/ic_seekbar_progress"
                app:rsb_progress_height="16dp"
                app:rsb_progress_radius="16dp"
                app:rsb_thumb_height="24dp"
                app:rsb_thumb_width="24dp"
                app:rsb_tick_mark_mode="number" />
        </com.topdon.lib.ui.widget.BitmapConstraintLayout>

        <!-- 延时拍照/录像 倒计时 View -->
        <com.topdon.module.thermal.ir.view.TimeDownView
            android:id="@+id/time_down_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/thermal_lay"
            app:layout_constraintEnd_toEndOf="@id/thermal_lay"
            app:layout_constraintTop_toTopOf="@id/thermal_lay"
            app:layout_constraintBottom_toBottomOf="@id/thermal_lay" />
        <!-- 自动连续拍照中提示文字 -->
        <TextView
            android:id="@+id/tv_continuous_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="3dp"
            android:text="@string/app_auto_photo"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="#99000000"
            android:visibility="gone"
            app:bgCorners="@{16}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/menu_second_view" />
        <!-- 录像中时间显示 -->
        <com.topdon.lib.core.view.MyTextView
            android:id="@+id/tv_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingStart="18dp"
            android:paddingEnd="36dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/pop_time_red"
            android:background="#99000000"
            android:visibility="gone"
            tools:visibility="gone"
            tools:text="00:00"
            app:bgCorners="@{16}"
            app:drawable_height="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/menu_second_view" />

        <!-- 汽车检测 -->
        <LinearLayout
            android:id="@+id/ll_car_detect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:paddingTop="16dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            tools:ignore="UseCompoundDrawables"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/thermal_lay"
            app:layout_constraintEnd_toEndOf="@id/thermal_lay"
            app:layout_constraintTop_toTopOf="@id/thermal_lay">
            <ImageView
                android:id="@+id/iv_car_detect"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="4dp"
                android:src="@drawable/ic_car_detect_prompt"
                android:contentDescription="@null"
                android:background="@drawable/bg_corners6_solid_b3_00" />
            <TextView
                android:id="@+id/tv_car_detect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:drawablePadding="8dp"
                android:background="@drawable/bg_corners6_solid_b3_00"
                tools:drawableEnd="@drawable/ic_arrow_right_white"
                tools:text="Temperature 90℃-100℃ "
                app:drawableEndCompat="@drawable/ic_arrow_right_white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>