<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16131e">

    <com.topdon.lib.core.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:titleText="@string/title_color_mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 取消 -->
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="@string/app_cancel"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:background="@drawable/bg_corners05_solid_16131e_stroke_theme"
        app:layout_constraintDimensionRatio="325:88"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_confirm" />

    <!-- 确定 -->
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="@string/app_confirm"
        android:textSize="14sp"
        android:textColor="#55272F"
        android:background="@drawable/bg_corners05_solid_theme"
        app:layout_constraintDimensionRatio="325:88"
        app:layout_constraintTop_toTopOf="@id/tv_cancel"
        app:layout_constraintStart_toEndOf="@id/tv_cancel"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_view"
        app:layout_constraintBottom_toTopOf="@id/tv_cancel">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 动态渲染 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_dynamic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_pseudo_item_select"
                tools:background="@drawable/bg_corners05_solid_2a183e_stroke_theme"
                app:layout_constraintDimensionRatio="343:96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/iv_dynamic"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/svg_pseudo_set_dynamic_select"
                    android:contentDescription="@null"
                    app:layout_constraintWidth_percent="0.12"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <TextView
                    android:id="@+id/tv_dynamic_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/pseudo_dynamic_rendering_title"
                    android:textSize="16sp"
                    android:textColor="#FFBA42"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/iv_dynamic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_dynamic_tips" />
                <TextView
                    android:id="@+id/tv_dynamic_tips"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/pseudo_dynamic_rendering_tips"
                    android:textSize="13sp"
                    android:textColor="#80ffffff"
                    app:layout_constraintStart_toEndOf="@id/iv_dynamic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_title"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 自定义 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_custom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_pseudo_item_select"
                app:layout_constraintDimensionRatio="343:96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_dynamic">
                <ImageView
                    android:id="@+id/iv_custom"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/svg_pseudo_set_custom_not_select"
                    android:contentDescription="@null"
                    app:layout_constraintWidth_percent="0.12"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/tv_custom_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/pseudo_custom_title"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/iv_custom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_custom_tips" />
                <TextView
                    android:id="@+id/tv_custom_tips"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/pseudo_custom_tips"
                    android:textSize="13sp"
                    android:textColor="#80ffffff"
                    app:layout_constraintStart_toEndOf="@id/iv_custom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_custom_title"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 自定义设置内容 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_custom_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_custom">

                <TextView
                    android:id="@+id/tv_step1_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/pseudo_set_tips1"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 最高温 -->
                <TextView
                    android:id="@+id/tv_max_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/chart_temperature_high"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    tools:drawableStart="@drawable/svg_temperature_alarm_high"
                    app:drawableStartCompat="@drawable/svg_temperature_alarm_high"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_step1_title" />
                <EditText
                    android:id="@+id/et_max_temp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxLength="6"
                    android:background="@drawable/shape_corners06_solid_626569"
                    app:layout_constraintDimensionRatio="319:40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_max_temp" />
                <TextView
                    android:id="@+id/tv_max_temp_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textSize="14sp"
                    android:textColor="#eeeeee"
                    tools:text="°C"
                    app:layout_constraintEnd_toEndOf="@id/et_max_temp"
                    app:layout_constraintTop_toTopOf="@id/et_max_temp"
                    app:layout_constraintBottom_toBottomOf="@id/et_max_temp" />

                <!-- 最低温 -->
                <TextView
                    android:id="@+id/tv_min_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/chart_temperature_low"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    tools:drawableStart="@drawable/svg_temperature_alarm_low"
                    app:drawableStartCompat="@drawable/svg_temperature_alarm_low"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_max_temp" />
                <EditText
                    android:id="@+id/et_min_temp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxLength="6"
                    android:background="@drawable/shape_corners06_solid_626569"
                    app:layout_constraintDimensionRatio="319:40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_min_temp" />
                <TextView
                    android:id="@+id/tv_min_temp_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textSize="14sp"
                    android:textColor="#eeeeee"
                    tools:text="°C"
                    app:layout_constraintEnd_toEndOf="@id/et_min_temp"
                    app:layout_constraintTop_toTopOf="@id/et_min_temp"
                    app:layout_constraintBottom_toBottomOf="@id/et_min_temp" />


                <TextView
                    android:id="@+id/tv_step2_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/pseudo_set_tips2"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_min_temp" />

                <View
                    android:id="@+id/view_color_title"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/shape_corners50_solid_3b3e44"
                    app:layout_constraintWidth_percent="0.8"
                    app:layout_constraintDimensionRatio="276:38"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_step2_title" />
                <TextView
                    android:id="@+id/tv_color_custom"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/pseudo_custom_title"
                    android:textSize="14sp"
                    android:textColor="#FFBA42"
                    android:background="@drawable/bg_corners50_solid_2a183e_stroke_theme"
                    app:layout_constraintTop_toTopOf="@id/view_color_title"
                    app:layout_constraintBottom_toBottomOf="@id/view_color_title"
                    app:layout_constraintStart_toStartOf="@id/view_color_title"
                    app:layout_constraintEnd_toStartOf="@+id/tv_color_recommend"/>
                <TextView
                    android:id="@+id/tv_color_recommend"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/pseudo_recommend"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    app:layout_constraintTop_toTopOf="@id/view_color_title"
                    app:layout_constraintBottom_toBottomOf="@id/view_color_title"
                    app:layout_constraintStart_toEndOf="@id/tv_color_custom"
                    app:layout_constraintEnd_toEndOf="@id/view_color_title" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_color_custom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_color_title">

                    <!-- 添加 -->
                    <ImageView
                        android:id="@+id/iv_custom_add"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginEnd="2dp"
                        android:padding="10dp"
                        android:src="@drawable/selector_pseudo_add"
                        android:contentDescription="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <!-- 删除 -->
                    <ImageView
                        android:id="@+id/iv_custom_del"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:padding="10dp"
                        android:src="@drawable/selector_pseudo_del"
                        android:contentDescription="@null"
                        app:layout_constraintEnd_toStartOf="@id/iv_custom_add"
                        app:layout_constraintTop_toTopOf="@id/iv_custom_add" />

                    <TextView
                        android:id="@+id/tv_custom_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="12dp"
                        android:text="Min"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_custom_add" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="Max"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_custom_min" />

                    <com.topdon.pseudo.view.PseudoPickView
                        android:id="@+id/pseudo_pick_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_custom_min" />

                    <com.topdon.lib.core.view.ColorSelectView
                        android:id="@+id/color_select_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="33dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pseudo_pick_view" />

                    <!-- 目前原型UI为6个预设值，更改的概率不大，此处直接写死，就不用 RecyclerView、自定义View 之类的去复杂化了 -->
                    <View
                        android:id="@+id/view_custom_color1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="16dp"
                        android:elevation="5dp"
                        android:background="@drawable/selector_color_pick_0000ff"
                        app:layout_constraintWidth_percent="0.09"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintTop_toBottomOf="@id/color_select_view"
                        app:layout_constraintStart_toStartOf="@id/color_select_view"
                        app:layout_constraintEnd_toStartOf="@+id/view_custom_color2" />
                    <View
                        android:id="@+id/view_custom_color2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:elevation="5dp"
                        android:background="@drawable/selector_color_pick_ff0000"
                        app:layout_constraintWidth_percent="0.09"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="@id/view_custom_color1"
                        app:layout_constraintStart_toEndOf="@id/view_custom_color1"
                        app:layout_constraintEnd_toStartOf="@+id/view_custom_color3" />
                    <View
                        android:id="@+id/view_custom_color3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:elevation="5dp"
                        android:background="@drawable/selector_color_pick_00ff00"
                        app:layout_constraintWidth_percent="0.09"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="@id/view_custom_color1"
                        app:layout_constraintStart_toEndOf="@id/view_custom_color2"
                        app:layout_constraintEnd_toStartOf="@+id/view_custom_color4" />
                    <View
                        android:id="@+id/view_custom_color4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:elevation="5dp"
                        android:background="@drawable/selector_color_pick_ffff00"
                        app:layout_constraintWidth_percent="0.09"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="@id/view_custom_color1"
                        app:layout_constraintStart_toEndOf="@id/view_custom_color3"
                        app:layout_constraintEnd_toStartOf="@+id/view_custom_color5" />
                    <View
                        android:id="@+id/view_custom_color5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:elevation="5dp"
                        android:background="@drawable/selector_color_pick_000000"
                        app:layout_constraintWidth_percent="0.09"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="@id/view_custom_color1"
                        app:layout_constraintStart_toEndOf="@id/view_custom_color4"
                        app:layout_constraintEnd_toStartOf="@+id/view_custom_color6" />
                    <View
                        android:id="@+id/view_custom_color6"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:elevation="5dp"
                        android:background="@drawable/selector_color_pick_ffffff"
                        app:layout_constraintWidth_percent="0.09"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="@id/view_custom_color1"
                        app:layout_constraintStart_toEndOf="@id/view_custom_color5"
                        app:layout_constraintEnd_toEndOf="@id/color_select_view" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_color_recommend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_color_title">
                    <!-- 目前原型UI为5个预设值，更改的概率不大，此处直接写死，就不用 RecyclerView、自定义View 之类的去复杂化了 -->
                    <!-- 铁红 -->
                    <View
                        android:id="@+id/view_recommend_bg_color1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/bg_corners04_stroke_30_ff"
                        app:layout_constraintDimensionRatio="295:78"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/tv_recommend_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/color_p3"
                        android:textSize="14sp"
                        android:textColor="#80ffffff"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="@id/view_recommend_bg_color1"
                        app:layout_constraintTop_toTopOf="@id/view_recommend_bg_color1"
                        app:layout_constraintBottom_toTopOf="@+id/view_recommend_color1" />
                    <View
                        android:id="@+id/view_recommend_color1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="4dp"
                        tools:background="#00ffff"
                        app:layout_constraintDimensionRatio="263:30"
                        app:layout_constraintStart_toStartOf="@id/view_recommend_bg_color1"
                        app:layout_constraintEnd_toEndOf="@id/view_recommend_bg_color1"
                        app:layout_constraintTop_toBottomOf="@id/tv_recommend_color1"
                        app:layout_constraintBottom_toBottomOf="@id/view_recommend_bg_color1" />

                    <!-- 黑红 -->
                    <View
                        android:id="@+id/view_recommend_bg_color2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/bg_corners04_stroke_30_ff"
                        app:layout_constraintDimensionRatio="295:78"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view_recommend_bg_color1"/>
                    <TextView
                        android:id="@+id/tv_recommend_color2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/pseudo_type_black_red"
                        android:textSize="14sp"
                        android:textColor="#80ffffff"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="@id/view_recommend_bg_color2"
                        app:layout_constraintTop_toTopOf="@id/view_recommend_bg_color2"
                        app:layout_constraintBottom_toTopOf="@+id/view_recommend_color2" />
                    <View
                        android:id="@+id/view_recommend_color2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="4dp"
                        tools:background="#00ffff"
                        app:layout_constraintDimensionRatio="263:30"
                        app:layout_constraintStart_toStartOf="@id/view_recommend_bg_color2"
                        app:layout_constraintEnd_toEndOf="@id/view_recommend_bg_color2"
