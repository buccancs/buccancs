<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_16131E"
    android:fitsSystemWindows="true">

    <com.topdon.lib.core.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:titleText="@string/ts004_auto_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/cLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/setting_bg_shape"
        app:layout_constraintTop_toBottomOf="@id/title_view"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/setting_item_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:textColor="#E8E8EB"
            android:textSize="@dimen/main_item_font"
            android:text="@string/ts004_auto_save"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/setting_item_save_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            style="@style/cameraSetSwitch"
            android:textColor="@color/font_second_color"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ts004_save_tips"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/pingfang_regular"
        android:textColor="#CCFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cLayout"/>


</androidx.constraintlayout.widget.ConstraintLayout>