<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_16131E"
    android:fitsSystemWindows="true">

    <com.topdon.lib.core.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:titleText="@string/more_device_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/setting_bg_shape"
        app:layout_constraintTop_toBottomOf="@+id/title_view"
        android:layout_marginHorizontal="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_sn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="SN"
                android:textIsSelectable="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_sn_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                tools:text="98323183843221"
                android:textIsSelectable="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintRight_toLeftOf="@+id/tv_sn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/view_one"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33ffffff"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_sn"/>

            <TextView
                android:id="@+id/tv_device_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ts004_device_model"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textIsSelectable="true"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_one"/>

            <TextView
                android:id="@+id/tv_device_model_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TS004"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:textIsSelectable="true"
                app:layout_constraintRight_toLeftOf="@+id/tv_device_model"
                app:layout_constraintTop_toBottomOf="@+id/view_one"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/view_two"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33ffffff"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_device_model"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_layout_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_two">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_copy_svg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="@+id/guideline"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ts004_msg_copy"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>