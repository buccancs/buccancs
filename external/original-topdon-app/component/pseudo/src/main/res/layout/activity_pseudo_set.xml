                            android:layout_height="0dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toBottomOf="@id/view_recommend_bg_color2"
                            app:layout_constraintDimensionRatio="263:30"
                            app:layout_constraintEnd_toEndOf="@id/view_recommend_bg_color2"
                            app:layout_constraintStart_toStartOf="@id/view_recommend_bg_color2"
                            app:layout_constraintTop_toBottomOf="@id/tv_recommend_color2"
