<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/color_16131E"
                                                   android:fitsSystemWindows="true">

    <com.topdon.lib.core.view.TitleView
            android:id="@+id/title_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleText="@string/ts004_auto_save"/>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/setting_bg_shape"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/title_view">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/setting_item_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:text="@string/ts004_auto_save"
                android:textColor="#E8E8EB"
                android:textSize="@dimen/main_item_font"/>

        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/setting_item_save_select"
                style="@style/cameraSetSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@color/font_second_color"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:text="@string/ts004_save_tips"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cLayout"/>

</androidx.constraintlayout.widget.ConstraintLayout>