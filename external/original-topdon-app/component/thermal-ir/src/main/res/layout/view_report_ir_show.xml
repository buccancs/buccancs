            android:visibility="gone"/>

    <include
            android:id="@+id/cl_rect2"
            layout="@layout/item_report_ir_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    <include
            android:id="@+id/cl_rect3"
            layout="@layout/item_report_ir_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    <include
            android:id="@+id/cl_rect4"
            layout="@layout/item_report_ir_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    <include
            android:id="@+id/cl_rect5"
            layout="@layout/item_report_ir_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

</LinearLayout>