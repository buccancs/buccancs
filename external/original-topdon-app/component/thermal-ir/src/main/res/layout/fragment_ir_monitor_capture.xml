<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_16131E">

    <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_monitor_capture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="930:678"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintWidth_percent="0.82" />

    <View
            android:id="@+id/view_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_corners10_solid_theme"
            app:layout_constraintBottom_toBottomOf="@id/tv_start"
            app:layout_constraintEnd_toEndOf="@id/tv_start"
            app:layout_constraintStart_toStartOf="@id/tv_start"
            app:layout_constraintTop_toTopOf="@id/tv_start" />

    <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingStart="30dp"
            android:paddingTop="12dp"
            android:paddingEnd="30dp"
            android:paddingBottom="12dp"
            android:text="@string/monitor_create_chart"
            android:textColor="#55272F"
            android:textSize="15sp"
            app:drawableEndCompat="@drawable/svg_arrow_right_55272f"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            tools:drawableEnd="@drawable/svg_arrow_right_55272f" />

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="TDAnimationJSON.json"
            app:lottie_imageAssetsFolder="images/"
            app:lottie_loop="true" />

</androidx.constraintlayout.widget.ConstraintLayout>