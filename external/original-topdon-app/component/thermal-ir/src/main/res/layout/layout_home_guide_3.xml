<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_guide_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:background="#16131e"
        tools:visibility="visible">

    <LinearLayout
            android:id="@+id/view_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal"
            android:theme="@style/ToolbarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/app_font" />
    </LinearLayout>

    <View
            android:id="@+id/view_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="375:56"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="46dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_main_connect_bg"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/view_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_open_thermal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="140dp"
            android:background="@drawable/bg_open_thermal"
            app:layout_constraintBottom_toBottomOf="@id/iv_bg"
            app:layout_constraintEnd_toEndOf="@id/iv_bg"
            app:layout_constraintStart_toStartOf="@id/iv_bg"
            app:layout_constraintWidth_percent="0.46">

        <TextView
                android:id="@+id/tv_open_thermal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="3dp"
                android:paddingTop="13dp"
                android:paddingEnd="3dp"
                android:paddingBottom="13dp"
                android:text="@string/main_open_thermal"
                android:textColor="@color/color_img_calibration_button"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_open_thermal"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/iv_open_thermal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_main_arrow"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_open_thermal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
            android:id="@+id/iv_line"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:src="@drawable/svg_home_guide_1_line"
            app:layout_constraintBottom_toTopOf="@id/cl_open_thermal"
            app:layout_constraintDimensionRatio="24:142"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.032" />

    <View
            android:id="@+id/view_bg_theme"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_corners06_solid_theme"
            app:layout_constraintBottom_toBottomOf="@+id/tv_tips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_count"
            app:layout_constraintWidth_percent="0.74" />

    <TextView
            android:id="@+id/tv_tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="18dp"
            android:text="@string/tc_guide_tips3"
            android:textColor="#55272F"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/iv_line"
            app:layout_constraintEnd_toEndOf="@id/view_bg_theme"
            app:layout_constraintStart_toStartOf="@id/view_bg_theme" />

    <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:paddingTop="18dp"
            android:text="2/2"
            android:textColor="#333333"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tv_tips"
            app:layout_constraintEnd_toEndOf="@id/view_bg_theme"
            app:layout_constraintStart_toStartOf="@id/view_bg_theme" />

    <TextView
            android:id="@+id/tv_i_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corners50_stroke_ff"
            android:paddingStart="36dp"
            android:paddingTop="12dp"
            android:paddingEnd="36dp"
            android:paddingBottom="12dp"
            android:text="@string/app_got_it"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>