<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_16131E"
        android:fitsSystemWindows="true">

    <com.topdon.lib.core.view.TitleView
            android:id="@+id/title_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleText="@string/main_thermal_motion" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chart_lay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="1.5dp"
            android:paddingTop="12dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_view">

        <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corners50_solid_3b3e44"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <View
                    android:layout_width="6sp"
                    android:layout_height="6sp"
                    android:background="@drawable/bg_oval_solid_ff4747" />

            <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="00:00:00"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/monitor_vol_lay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:layout_constraintBottom_toTopOf="@id/mp_chart_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_time"
                app:layout_constraintWidth_percent="0.9">

            <ImageView
                    android:id="@+id/monitor_current_img"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/bg_oval_solid_ff4747_stroke_ed"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/monitor_current_vol"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/monitor_current_vol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/chart_current"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_font_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/monitor_real_img"
                    app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                    android:id="@+id/monitor_real_img"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/bg_oval_solid_06aaff_stroke_ed"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/monitor_real_vol"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/monitor_real_vol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_temperature_low"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_font_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.topdon.module.thermal.ir.view.ChartMonitorView
                android:id="@+id/mp_chart_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/monitor_vol_lay" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/motion_action_lay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintStart_toStartOf="parent">

        <Button
                android:id="@+id/motion_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_btn_big_height"
                android:background="@drawable/bg_corners05_solid_theme"
                android:text="@string/monitor_create_chart"
                android:textColor="#55272F"
                android:textSize="@dimen/app_small_font"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4" />

        <Button
                android:id="@+id/motion_start_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_btn_big_height"
                android:background="@drawable/bg_corners05_solid_theme"
                android:text="@string/monitor_start"
                android:textColor="#55272F"
                android:textSize="@dimen/app_small_font"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:id="@+id/thermal_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/motion_action_lay"
            app:layout_constraintDimensionRatio="192:256"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chart_lay" />

</androidx.constraintlayout.widget.ConstraintLayout>