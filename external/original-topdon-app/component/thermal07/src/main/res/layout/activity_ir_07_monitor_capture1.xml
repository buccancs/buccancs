<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/color_16131E"
                                                   android:fitsSystemWindows="true"
                                                   tools:context=".activity.IR07MonitorCapture1Activity">

    <com.topdon.lib.core.view.TitleView
            android:id="@+id/title_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:titleText="@string/main_thermal_motion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/motion_action_lay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:id="@+id/motion_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_btn_big_height"
                android:text="@string/monitor_create_chart"
                android:textSize="@dimen/app_small_font"
                android:textColor="#55272F"
                android:background="@drawable/bg_corners05_solid_theme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4"/>

        <Button
                android:id="@+id/motion_start_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_btn_big_height"
                android:text="@string/monitor_start"
                android:textSize="@dimen/app_small_font"
                android:visibility="gone"
                android:textColor="#55272F"
                android:background="@drawable/bg_corners05_solid_theme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:id="@+id/fl_rtsp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_view"
            app:layout_constraintBottom_toTopOf="@id/motion_action_lay"/>

    <com.topdon.module.thermal.ir.view.Temperature07View
            android:id="@+id/geometry_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:maxCount="1"
            app:layout_constraintDimensionRatio="256:192"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/fl_rtsp"
            app:layout_constraintBottom_toBottomOf="@id/fl_rtsp"/>


</androidx.constraintlayout.widget.ConstraintLayout>