<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:background="#474747">

    <EditText
            android:id="@+id/b"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/ooc"
            app:layout_constraintTop_toBottomOf="@+id/btext"/>

    <EditText
            android:id="@+id/ooc"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/max"
            app:layout_constraintTop_toBottomOf="@+id/ooctext"/>

    <EditText
            android:id="@+id/max"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/min"
            app:layout_constraintTop_toBottomOf="@+id/maxtext"/>

    <TextView
            android:id="@+id/mintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/min_interval"
            app:layout_constraintStart_toEndOf="@+id/autotext"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:id="@+id/min"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/automode"
            app:layout_constraintTop_toBottomOf="@+id/mintext"/>

    <ToggleButton
            android:id="@+id/automode"
            android:layout_width="58dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autotext"/>

    <TextView
            android:id="@+id/ooctext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="OOC"
            app:layout_constraintStart_toEndOf="@+id/maxtext"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/maxtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/max_interval"
            app:layout_constraintStart_toEndOf="@+id/mintext"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/autotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_shutter"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="2dp"/>

    <TextView
            android:id="@+id/btext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:text="B"
            app:layout_constraintStart_toEndOf="@+id/ooctext"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
