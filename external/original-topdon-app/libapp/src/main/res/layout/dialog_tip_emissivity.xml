<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_tip_shutter_card"
        android:paddingStart="20dp"
        android:paddingTop="24dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp">

    <ImageView
            android:id="@+id/img_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@null"
            android:src="@drawable/dialog_tip_shutter_close"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_tip"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/dialog_tip_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/tc_temp_test_tips"
            android:textColor="@color/white_80"
            android:textSize="@dimen/app_font_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
            android:id="@+id/tv_emissivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/thermal_config_radiation"
            android:textColor="@color/white"
            android:textSize="@dimen/app_font"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_tip_msg_text" />

    <TextView
            android:id="@+id/tv_emissivity_materials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/thermal_config_radiation"
            android:textColor="@color/white_80"
            android:textSize="@dimen/app_font_11"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_emissivity" />

    <TextView
            android:id="@+id/tv_environment_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="@string/thermal_config_environment"
            android:textColor="@color/white_80"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_emissivity_materials" />

    <TextView
            android:id="@+id/tv_environment_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="32.00℃"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tv_environment_title"
            app:layout_constraintStart_toStartOf="@id/tv_environment_title"
            app:layout_constraintTop_toBottomOf="@id/tv_environment_title" />

    <View
            android:id="@+id/line"
            android:layout_width="0.5dp"
            android:layout_height="22dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tv_environment_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_environment_title" />

    <TextView
            android:id="@+id/tv_distance_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="@string/thermal_config_distance"
            android:textColor="@color/white_80"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/line"
            app:layout_constraintTop_toBottomOf="@id/tv_emissivity_materials" />

    <TextView
            android:id="@+id/tv_distance_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="32.00℃"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tv_distance_title"
            app:layout_constraintStart_toStartOf="@id/tv_distance_title"
            app:layout_constraintTop_toBottomOf="@id/tv_distance_title" />

    <CheckBox
            android:id="@+id/dialog_tip_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:button="@drawable/ic_check"
            android:text="@string/tip_otg_no_show"
            android:textColor="@color/white"
            android:textSize="@dimen/app_font_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_environment_value" />


    <Button
            android:id="@+id/dialog_tip_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_corners05_solid_3b3e44_stroke_theme"
            android:gravity="center"
            android:text="@string/tc_modify_params"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="@dimen/app_font"
            app:layout_constraintEnd_toStartOf="@id/dialog_tip_success_btn"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_tip_check" />


    <Button
            android:id="@+id/dialog_tip_success_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_corners05_solid_theme"
            android:gravity="center"
            android:text="@string/app_confirm"
            android:textAllCaps="false"
            android:textColor="#55272F"
            android:textSize="@dimen/app_font"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/dialog_tip_cancel_btn"
            app:layout_constraintTop_toBottomOf="@id/dialog_tip_check" />
</androidx.constraintlayout.widget.ConstraintLayout>