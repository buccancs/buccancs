<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             xmlns:app="http://schemas.android.com/apk/res-auto"
                             xmlns:tools="http://schemas.android.com/tools"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:gravity="center"
                             android:orientation="vertical"
                             tools:context="com.shimmerresearch.bluetoothmanagerexample.MainActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable/Disable Sensors"/>

    <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="openMenu"
            android:text="Enable/Disable Sensors"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="447dp"/>

    <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="openConfigMenu"
            android:text="Configuration"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="447dp"/>

    <TextView
            android:id="@+id/textViewPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please refer to the Android Logcat for signal data"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="startStreaming"
            android:text="Start Streaming"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="447dp"/>

    <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="stopStreaming"
            android:text="Stop Streaming"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="447dp"/>

    <Button
            android:id="@+id/button6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="startSDLogging"
            android:text="Start SD Logging"/>

    <Button
            android:id="@+id/button7"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="stopSDLogging"
            android:text="Stop SD Logging"/>

    <Button
            android:id="@+id/button5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="connectDevice"
            android:text="Connect"/>

    <Button
            android:id="@+id/button8"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="disconnectDevice"
            android:text="Disconnect"/>

</android.widget.LinearLayout>
